{
    "device_alias": {
      "TPT_in": "TPT" 
    },
    "clock_settings": {
      "default_bpm": 180,
      "device_out": "CLOCK" 
    },
    "input_mappings": [
      {
        "_comment": "Recibe MIDI Start en el puerto TPT y ejecuta la acción 'play'",
